            li
              a(href='#contact') Contact
            li
              a(href='http://blog.paul.nechifor.net') Blog
        h2.self
          a(href='#')= app.title

    section#description
      +description()
    section#s-projects
      +projects()
    section#s-interests
      +interests()
    section#s-contact
