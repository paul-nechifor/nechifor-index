// Reset
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p,
blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img,
ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center,
dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody,
tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure,
figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav,
section
  display block
body
  line-height 1
ol, ul
  list-style none
blockquote, q
  quotes none
blockquote:before, blockquote:after, q:before, q:after
  content ''
  content none
table
  border-collapse collapse
  border-spacing 0

// General
body
  font-family 'Open Sans'
  font-weight 400
  color #333
  cursor default
a
  text-decoration none
  color #37AD8E
  cursor pointer
a.internal
  position absolute
  top -60px
em
  font-style italic
strong
  font-weight 700
p, li, td
  font-size 20px
  font-weight 300
  line-height 1.4
  margin-bottom 10px
  @media (max-width: 479px)
    font-size 16px
.clear
  clear both
.btn
  font-size 18px
  font-weight 400
  padding 10px 30px
  text-transform uppercase
  background-color #666
  cursor pointer
  color #FFF
  display inline-block
  border-radius 3px
  -webkit-border-radius 3px
  -moz-border-radius 3px
  &:hover
    background-color #555
  &.primary
    background-color #37AD8E
    &:hover
      background-color #28816A
.container, table
  width 800px
  margin 0 auto
  @media (max-width: 767px)
    width auto
    padding 0 10px
    .left, .right
      width 100%
section
  position relative
  padding 50px 0 50px 0
  @media (max-width: 767px)
    padding 30px 0 30px 0
  &:nth-child(2n)
    background-color #eee
  h2
    text-transform uppercase
    font-size 28px
    font-weight 700
    margin-bottom 40px
    @media (max-width: 767px)
      margin-bottom 20px
    text-align center
    color #323A40
  ul
    list-style square
    padding-left 21px
.title
  margin-bottom 60px
  @media (max-width: 767px)
    margin-bottom 40px
  h1
    font-size 60px
    font-weight 700
    text-align center
    text-transform uppercase
    margin 80px 0 20px 0
    padding 0 20px
    color #FFF
  h2
    font-size 28px
    font-weight 300
    text-align center
    text-transform lowercase

// Navigation
nav
  background-color #323A40
  color #eee
  position fixed
  width 100%
  z-index 100
  .container
    position relative
  a
    display block
    height 60px
    line-height 60px
    color #eee
    text-transform uppercase
    font-weight 700
    cursor pointer
    &:hover
      color #37AD8E
  ul
    position absolute
    right 0
    top 0
    background-color #323A40
  li
    display inline-block
    font-size 14px
    margin-right 20px
    margin-bottom 0
    &:last-child
      margin-right 0
  h2
    font-size 20px
  // Hide menu icon on big devices.
  @media (min-width: 768px)
    .all-menu .activate
      display none
  @media (max-width: 767px)
    ul
      margin 60px 0 0 0
    li
      display block
      font-size 14px
      margin 0
      font-size 18px
      a
        height 30px
        line-height 30px
        padding 10px 30px
    li:last-child a
      padding-bottom 20px
    #nav-links
      display none
    .all-menu
      position absolute
      top 0
      right 0
      .activate
        font-size 30px
        text-align right
        line-height 60px
        height 60px
        padding 0 10px
      &:hover
        #nav-links
          display block

// Description
#description
  padding-top 110px
  background-image url('../cover.jpg')
  background-color #323A40
  background-position center top
  background-repeat no-repeat
  p
    font-weight 400
  p, h1, h2
    color #FFF
  .container
    text-align center
  @media (max-width: 767px)
    padding-top 90px
    margin 0 auto
#quick-contact
  margin-top 10px
  padding-left 0
  font-size 20px
  display inline-block
  margin 0 auto
  @media (max-width: 479px)
    a
      font-size 20px
  li
    display inline-block
    a
      display block
      color #FFF
      width 28px
      height 28px
      text-align center
      &:hover
        border-radius 4px
        -webkit-border-radius 4px
        -moz-border-radius 4px
        background-color #28816A
  .hidden
    display none
@media (max-width: 479px)
  #expand-quick-contact  a
    display inline-block
    width 20px

// Projects
#s-projects
  .buttons
    text-align center
    .btn
      width 300px
      text-align center
  .project
    display row
    margin-bottom 40px
    width 360px
    height 318px
    float left
    img
      width 100%
      margin 12px 0 10px
    h3
      font-size 24px
      font-weight bold
      .links a
        display block
        float right
  @media (min-width: 800px)
    .project
      margin 0 20px
    .projects
      width 800px
      margin 0 auto

  @media (max-width: 767px)
    .projects
      width 100%
    .project
      margin-bottom 40px
      width 100%
      height auto
      float none
      h3, p
        padding-left 10px
        padding-right 10px

  @media (min-width: 1200px)
    .projects
      width 1200px
    .project
      margin 15px
      width 370px
      height 180px
      position relative
      img
        margin 0
      h3, p
        position absolute
        left 0
        margin 0
        width 370px
        visibility hidden
        padding 10px
        z-index 10
      h3
        height 25px
        top -50px
        border-top 5px solid #fff
      p
        bottom -81px
        height 56px
        border-bottom 5px solid #fff
      &:hover
        margin 15px 5px
        padding 0 10px
        background-color #323a40
        h3, p
          visibility visible
          background-color #323a40
          color #fff

  @media (min-width: 1200px)
    .projects
      width 1200px

  @media (min-width: 1600px)
    .projects
      width 1600px

  @media (min-width: 1900px)
    .projects
      width 1816px
    .project
      margin 42px
      &:hover
        margin 42px 32px
        padding 0 10px

// Contact
.contact-icons
  margin 0
  text-align center
  width 360px
  margin 0 auto
  li
    display block
    margin 0
    float left
    a
      display block
      font-size 30px
      width 70px
      height 70px
      margin 10px
      line-height 70px
      text-align center
      background-color #666
      border-radius 3px
      -webkit-border-radius 3px
      -moz-border-radius 3px
  &.lesser li a
    font-size 20px
    width 40px
    height 40px
    margin 10px
    line-height 40px
  a
    color #FFF
  a:hover
    background-color #323A40
    color #37AD8E
  span
    display none

footer
  background-color #323A40
  color #eee
  text-align center
  padding 18px 0
  clear both
  p
    margin-bottom 0
    font-size 14px
