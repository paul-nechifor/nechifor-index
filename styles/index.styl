/* START RESET ---------------------------------------------------------------*/

html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p,
blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img,
ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center,
dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody,
tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure,
figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav,
section {
  display: block;
}
body {
  line-height: 1;
}
ol, ul {
  list-style: none;
}
blockquote, q {
  quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
  content: '';
  content: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
/* END RESET -----------------------------------------------------------------*/

/* General stuff */
body {
  font-family: 'Open Sans';
  font-weight: 400;
  color: #333;
  cursor: default;
}
a {
  text-decoration: none;
  color: #37AD8E;
  cursor: pointer;
}
em {
  font-style: italic;
}
strong {
  font-weight: 700;
}
p, li, td {
  font-size: 20px;
  font-weight: 300;
  line-height: 1.4;
  margin-bottom: 10px;
}

.btn {
  font-size: 18px;
  font-weight: 400;
  padding: 10px 30px;
  text-transform: uppercase;
  background-color: #666;
  cursor: pointer;
  color: #FFF;
  display: inline-block;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
}
.btn:hover {
  background-color: #555;
}
.btn.primary {
  background-color: #37AD8E;
}
.btn.primary:hover {
  background-color: #28816A
}

.container, table {
  width: 800px;
  margin: 0 auto;
}

/* Navigation */
nav {
  background-color: #323A40;
  color: #eee;
  position: fixed;
  width: 100%;
}
nav .container {
  position: relative;
}
nav a {
  display: block;
  height: 60px;
  line-height: 60px;
  color: #eee;
  text-transform: uppercase;
  font-weight: 700;
  cursor: pointer;
}
nav a:hover {
  color: #37AD8E;
}
nav ul {
  position: absolute;
  right: 0;
  top: 0;
  background-color: #323A40;
}
nav li {
  display: inline-block;
  font-size: 14px;
  margin-right: 20px;
  margin-bottom: 0;
}
nav li:last-child {
  margin-right: 0;
}
nav h2 {
  font-size: 20px;
}

/* The sections */
section {
  padding: 50px 0 50px 0;
}
section:nth-child(2n) {
  background-color: #eee;
}
section h2 {
  text-transform: uppercase;
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 40px;
  text-align: center;
  color: #323A40;
}
section ul {
  list-style: square;
}

a.internal {

  position: relative;
  top:-100px;
}




/* The description */

.title {
  margin-bottom: 60px;
}
.title h1 {
  font-size: 60px;
  font-weight: 700;
  text-align: center;
  text-transform: uppercase;
  margin-bottom: 14px;
  color: #FFF;
}
.title h2 {
  font-size: 28px;
  font-weight: 300;
  text-align: center;
  text-transform: lowercase;
}

#description {
  padding-top: 110px; /* Compensating for the fixed nav. */
  background-image: url('../cover.jpg');
  background-color: #323A40;
  background-position: center top;
  background-repeat: no-repeat;
}
#description p {
  font-weight: 400;
}
#description p, #description h1, #description h2 {
  color: #FFF;
}
#description .container {
  display: table;
}
#description .row {
  display: table-row;
}
#description .row .left, #description .row .right {
  display: table-cell;
  vertical-align: middle;
}
.container .left {
  width: 250px;
}
.container .right {
  width: 550px; text-align: left;
}

.portrait {
  background-image: url('../portret.jpg');
  background-repeat: no-repeat;
  width: 200px;
  height: 200px;
  border: 10px solid #fff;
  border-radius: 120px;
  -webkit-border-radius: 120px;
  -moz-border-radius: 120px;
  background-size: 200px 200px;
}

.portrait img {
  display: none;
}

#quick-contact {
  margin-top: 10px;
  font-size: 20px;
}

#quick-contact li {
  display: inline-block;
}

#quick-contact li a {
  display: block;
  color: #FFF;
  width: 28px;
  height: 28px;
  text-align: center;
}

#quick-contact li a:hover {
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  background-color: #28816A;
}

#quick-contact .hidden {
  display: none;
}

.clear {
  clear: both;
}

/* Projects */

#s-projects .buttons {
  text-align: center;
}
#s-projects .buttons .btn {
  width: 300px;
  text-align: center;
}


.projects {
  display: table;
  width: 800px;
  margin: 45px auto 0 auto;
}

.project-row {
  display: table-row;
}

.project-row.hidden {
  display: none;
}

.project {
  display: row;
  margin-bottom: 40px;
  width: 370px;
  float: left;
}

.project:first-child { margin-right: 60px; }
.project img { width: 100%; margin: 12px 0 10px;}
.project h3 { font-size: 24px; font-weight: bold;}
.project h3 .links a {
  display: block;
  float: right;
}

@media only screen and (max-width: 767px) {
  .projects {
    width: 100%;
  }
  .project {
    margin-bottom: 40px;
    width: 100%;
    float: none;
  }
  .project:last-child {
    margin-left: 0;
  }
  .project h3, .project p {
    padding-left: 10px;
    padding-right: 10px;
  }
}








