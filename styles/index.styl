/* Experience */
#s-experience table td {
  padding-bottom: 1em;
}

/* Contact */
.contact-icons {
  margin: 0;
  text-align: center;
  width: 360px;
  margin: 0 auto;
}
.contact-icons li {
  display: block;
  margin: 0;
  float: left;
}
.contact-icons li a {
  display: block;
  font-size: 30px;
  width: 70px;
  height: 70px;
  margin: 10px;
  line-height: 70px;
  text-align: center;
  background-color: #666;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
}
.contact-icons.lesser li a {
  font-size: 20px;
  width: 40px;
  height: 40px;
  margin: 10px;
  line-height: 40px;
}
.contact-icons a {
  color: #FFF;
}
.contact-icons a:hover {
  background-color: #323A40;
  color: #37AD8E;
}
.contact-icons span {
  display: none;
}

footer {
  background-color: #323A40;
  color: #eee;
  text-align: center;
  padding: 18px 0;
  clear: both;
}
footer p {
  margin-bottom: 0;
  font-size: 14px;
}
.clear-both {
  clear: both;
}

/* Map */
#map-location {
  padding: 0;
}
#map-canvas {
  height: 600px;
}

/* Devices with big screens. */
@media only screen and (min-width: 768px) {
  .all-menu .activate {
    display: none;
  }
}
/* NOT Devices with big screens. */
@media only screen and (max-width: 767px) {
  nav li {
    display: block;
    font-size: 14px;
    margin: 0;
  }
  #nav-links {
    display: none;
  }
  .all-menu {
    position: absolute;
    top: 0;
    right: 0;
  }
  .all-menu .activate {
    font-size: 30px;
    text-align: right;
    line-height: 60px;
    height: 60px;
    padding: 0 10px;
  }
  .all-menu:hover #nav-links {
    display: block;
  }
  nav ul {
    margin: 60px 0 0 0;
  }
  nav li {
    font-size: 18px;
  }
  nav li a {
    height: 30px;
    line-height: 30px;
    padding: 10px 30px;
  }
  nav li:last-child a {
    padding-bottom: 20px;
  }
  /* The sections */
  section {
    padding: 30px 0 30px 0;
  }
  section h2 {
    margin-bottom: 20px;
  }
  #description {
    padding-top: 90px; /* Compensating for the fixed nav. */
  }
  .title {
    margin-bottom: 40px;
  }
  #description .container {
    display: block;
  }
  #description .row {
    display: block;
  }
  #description .row .left, #description .row .right {
    display: block;
    margin: 0 auto;
  }
  #description .row .right {
    width: auto;
    margin-top: 20px;
  }
  .container, table {
    width: auto;
    padding: 0 10px;
  }
  .container .left, .container .right {
    width: 100%;
  }
  .portrait {
    margin: 0 auto;
  }
}
/* Devices with medium screens */
@media only screen and (min-width: 480px) and (max-width: 767px) {
}

/* Devices with small screens */
@media only screen and (max-width: 479px) {
  p, li, td {
    font-size: 16px;
  }
  #quick-contact a {
    font-size: 20px;
  }
  #expand-quick-contact a {
    display: inline-block;
    width: 20px;
  }
}
